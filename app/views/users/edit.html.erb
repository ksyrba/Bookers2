<!DOCTYPE html>
<html>
  <main>
    <p id="notice"></p>
    <div class='container'>
      <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <%= form_with model: @user, method: :patch do |f| %>
          <div class="form-group">
            <p class="user_name">Name</p>
            <%= f.text_field :name, autofocus: true %>
          </div>
          <div class="form-group">
            <p class="user_image">Image</p>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="form-group">
            <p class="user_introduction">Introduction</p>
            <%= f.text_area :introduction, autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</html>
