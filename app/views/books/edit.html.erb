<!DOCTYPE html>
  <html>
    <main>
      <p id="notice">
        <% if @book.errors.any? %>
      <h3 class="text-danger"><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul class="text-danger">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
      </p>
      <div class='container'>
        <div class='row'>
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		      <h1>Editing Book</h1>
    	      <%= form_with model: @book, method: :patch do |f| %>
            <div class="form-group">
              <p class="book_title">Title</p>
              <%= f.text_field :title, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <p class="book_opinion">Opinion</p>
              <%= f.text_area :body, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Update Book", class: "btn btn-success" %>
            </div>
            <% end %>
            <%= link_to "Show", book_path(@book.id) %>
            <span>|</span>
            <%= link_to "Back", books_path %>
          </div>
        </div>
      </div>
    </main>
  </html>