<!DOCTYPE html>
  <html>
    <main>
      <p id="notice"></p>
      <div class='container'>
        <div class='row'>
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		      <h1>Editing Book</h1>
    	      <%= form_with model: @book, method: :patch do |f| %>
            <div class="form-group">
              <p class="book_title">Title</p>
              <%= f.text_field :title, autofocus: true %>
            </div>
            <div class="form-group">
              <p class="book_opinion">Opinion</p>
              <%= f.text_area :body, autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.submit "Update Book", class: "btn btn-success" %>
            </div>
            <% end %>
            <%= link_to "Show", book_path(@book.id) %>
            <span>|</span>
            <%= link_to "back", books_path %>
          </div>
        </div>
      </div>
    </main>
  </html>