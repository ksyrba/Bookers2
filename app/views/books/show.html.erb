<!DOCTYPE html>
<html>
  <main>
    <p id="notice"></p>
    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>
          <h2>User info</h2>
          <table class='table'>
            <tr>
              <%= image_tag @book.user.get_profile_image(100,100) %>
            </tr>
            <tr>
          	  <th>name</th>
          	  <th>
          	    <%= @book.user.name %>
          	  </th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th>
          	    <%= @book.user.introduction %>
          	  </th>
            </tr>
          </table>
          <div class='row'>
            <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book_new, url: '/books', method: :post do |f| %>
          <div class="form-group">
            <p class="book_title">Title</p>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <p class="book_opinion">Opinion</p>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <div class="btn btn-success">
              <%= f.submit 'Create Book', class: "btn btn-success" %>
            </div>
          </div>
          <% end %>
        </div>
        <div class='col-md-8 offset-md-1'>
          <h2>Book detail</h2>
    		  <table class='table'>
    		    <tbody>
        		  <tr>
        		    <td>
                  <%= image_tag @book.user.get_profile_image(100,100) %><br/>
                  <%= link_to @book.user.name, users_path(@book.user.id) %>
                </td>
                <td>
                  <%= @book.title %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                  <% end %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</html>
